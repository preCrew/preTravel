{
  "compilerOptions": {
    "target": "es2015",
    "strict": true,
    "lib":[
        "ES5",
        "ES2015",
        "ES2022",
        "DOM"//web 사용
    ],
    "forceConsistentCasingInFileNames":false,
    "moduleResolution": "node",
    "jsx":"react-jsx",   
    "esModuleInterop": true ,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
    },
    "jsxImportSource": "@emotion/react",
    "module": "esnext",
  },
  "include": ["src", "@types","client.tsx"],
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }

}